# ChartGenius v3 Backend Configuration
# Скопируйте этот файл в .env и заполните реальными значениями

# Environment
ENVIRONMENT=development
DEBUG=true
API_PORT=8000

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=o4-mini-2025-04-16

# CryptoCompare Configuration
CRYPTOCOMPARE_API_KEY=your-cryptocompare-api-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
ADMIN_TELEGRAM_ID=your-telegram-id
WEBAPP_URL=https://chartgenius.online

# Oracle Database Configuration
ORACLE_USERNAME=ADMIN
ORACLE_PASSWORD=your-oracle-password
ORACLE_DSN=your-oracle-dsn
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=10
ORACLE_POOL_INCREMENT=1

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_TTL_OHLCV=900

# Payment Configuration
TELEGRAM_PAYMENT_TOKEN=your-telegram-payment-token
ENABLE_TELEGRAM_PAYMENTS=true
DEFAULT_CURRENCY=XTR

# Application Configuration
DEFAULT_SYMBOL=BTCUSDT
DEFAULT_INTERVAL=4h
DEFAULT_DAYS=15

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/chartgenius.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://t.me,https://chartgenius.online

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_SECONDS=900

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true
